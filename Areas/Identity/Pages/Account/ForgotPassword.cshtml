@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
}

<h1>@ViewData["Title"]</h1>
<h2>ایمیل خود را وارد کنید.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Mobile" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Mobile" class="form-label"></label>
                <span asp-validation-for="Input.Mobile" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">بازیابی رمز عبور</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}  