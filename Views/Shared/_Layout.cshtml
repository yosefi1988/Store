@using Microsoft.AspNetCore.Identity
@using WebApplicationStore.Controllers.Classroom

@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - فروشگاه اپلیکیشن وب</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationStore.styles.css" asp-append-version="true" />

    <!-- لینک به فونت وزیر از گوگل -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet" type="text/css" />

    <style>
        body {
            direction: rtl;
            font-family: Vazirmatn, sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom shadow-sm py-3">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">فروشگاه اپلیکیشن وب</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="تغییر وضعیت ناوبری">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Privacy">حریم خصوصی</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {

                            <li class="nav-item">
                                <a href="/ShoppingBaskets" class="nav-link text-dark fw-semibold">
                                    سبد های من
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/identity/account/logout" class="btn btn-outline-primary btn-sm rounded-pill d-none d-lg-inline-flex">
                                    خروج
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="/identity/account/Login" class="btn btn-primary btn-sm rounded-pill d-none d-lg-inline-flex">
                                    <i class="fas fa-sign-in-alt me-2"></i> ورود
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/identity/account/Register" class="btn btn-outline-success btn-sm rounded-pill d-none d-lg-inline-flex">
                                    <i class="fas fa-user-plus me-2"></i> ثبت‌نام
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - فروشگاه اپلیکیشن وب - <a asp-area="" asp-controller="Home" asp-action="Privacy">حریم خصوصی</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
